import java.util.Scanner;

public class kaloritanımlama {
    public static void main(String[] args) {

        System.out.println(" kalori hesaplama programamıza hoş geldiniz lütfen adım sayınızı giriniz;");
        int adımSayısı=0;
        Scanner klavye = new Scanner(System.in);
        adımSayısı= klavye.nextInt();
        System.out.println("lütfen cinsiyetinizi belirtiniz (kadın için=1/ erkek için=2/ ");
        int cinsiyet=0;
        Scanner klavye2= new Scanner(System.in);
        cinsiyet= klavye2.nextInt();
        if(cinsiyet==1){
            System.out.println("yaktağınız kalori miktarı; "+(adımSayısı*30)/500);

        }
        else {
            System.out.println("yaktağınız kallori miktarı; " + (adımSayısı*45)/500);

        }

        System.out.println("işleminiz tamamlandı sağlıklı günler dileriz :)");

    }
}
