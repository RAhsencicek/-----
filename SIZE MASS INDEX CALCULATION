import java.util.Scanner;

public class boykiloortalaması {
    public static void main(String[] args) {
        System.out.println("vücüt kitle indeksi hesaplama programımıza hoş geldiniz başlamak için lütfen boyunuzu giriniz:");

        double boy = 0;
        Scanner klavye = new Scanner(System.in);
        boy= klavye.nextDouble();
        System.out.println("devam etmek için lütfen ağırlığınızı girin");
        double kg = 0;
        Scanner klavye2 = new Scanner(System.in);
        kg = klavye2.nextDouble();
        double bki = 0;
        bki =  (kg/(boy * boy));
        System.out.println("lütfen cinsiyetinizi girin (kadın için 1'e erkek için 2'ye)");
        int cinsiyet=0;
        Scanner klavye3 =new Scanner(System.in);
        cinsiyet= klavye3.nextInt();
        if (cinsiyet==1){
            if (bki>=23) {
                System.out.println("biraz kilo versen iyi olacak :/ bki değerin:"+bki + " Bu değerin 23'ten az veya eşit olması gerekiyordu");
            }
             else {
                System.out.println("harika fit çıktın bki değerin:"+bki);
            }}

            else{

                if (bki>= 25){
                    System.out.println("biraz kilo versen iyi olacak :/ bki değerin:"+bki + " Bu değerin 25'ten az veya eşit olması gerekiyordu");
                }
                else {
                    System.out.println("harika fit çıktın bki değerin"+ bki);
                }
            }
